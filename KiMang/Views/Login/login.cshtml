@model KiMang.EMPLOYEE
@{ Layout = null; }
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/wwwroot/css/style.css" />
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
</head>
<style>
    body {
        /*background: url('../../Images/login-bg.jpeg') no-repeat center center fixed;*/
        background-size: cover;
    }
    .noborder {
        
        border:none;
        border-bottom:1px solid gray;
    }
    textarea:focus, input:focus {
        outline: none;
        border-bottom: 2px rgb(255 106 0) solid;
        box-shadow: 1px 1px 4px 4px rgb(211 211 211);
    }

</style>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div style="background: url('../../Images/login-bg.jpeg') no-repeat center center fixed" class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <div class="heading-section text-center">
                    Knowledge Inn
                </div>
                <h1 class="text-center">
                    WelCome page
                </h1>
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <!-- Email input -->
                    <div class="card p-5">
                        <div class="heading-section text-center">
                            Sign In
                        </div>
                        <div class="form-outline mb-1">
                            Employee Id
                        </div>
                        <div class="form-outline mb-2">
                            @Html.TextBoxFor(model => model.EMPLOYEE_ID, new { @class = "col-12 noborder" })
                            @Html.ValidationMessageFor(model => model.EMPLOYEE_ID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-outline mb-1">
                            Name
                        </div>
                        <!-- Password input -->
                        <div class="form-outline mb-2">
                            @Html.TextBoxFor(model => model.NAME,new { @class = "col-12 noborder" })
                            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-outline mb-1">
                            Password
                        </div>
                        <div class="form-outline mb-2">
                            @Html.PasswordFor(model => model.PWD,  new { @class = "col-12 noborder" })
                            @Html.ValidationMessageFor(model => model.PWD, "", new { @class = "text-danger"})
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Remember me
                                </label>
                            </div>
                            <a href="#!" class="text-body">Forgot password?</a>
                        </div>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <div class="form-group">
                                <div class="col-md-offset-2">
                                    <input type="submit" value="Continue" class="btn btn-block bg-primary btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
